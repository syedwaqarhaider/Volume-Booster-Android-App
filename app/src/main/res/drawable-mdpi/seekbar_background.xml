<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape
            android:shape="rectangle">

            <solid
                android:color="@color/background_color"/>

            <corners
                android:radius="50dp"/>

        </shape>

    </item>

    <item
        android:right="8dp"
        android:bottom="8dp"
        android:left="8dp"
        android:top="8dp">
        <shape
            android:shape="rectangle">

            <solid
                android:color="@color/light_black"/>

            <corners
                android:radius="50dp"/>

        </shape>

    </item>

</layer-list>