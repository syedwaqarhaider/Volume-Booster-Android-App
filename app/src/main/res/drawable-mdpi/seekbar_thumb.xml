<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape
            android:shape="oval">

            <solid
                android:color="@color/background_color"
                />

            <size
                android:width="15dp"
                android:height="15dp"/>

        </shape>

    </item>

    <item
        android:right="5dp"
        android:bottom="5dp"
        android:left="5dp"
        android:top="5dp">
        <shape
            android:shape="oval">

            <solid
                android:color="@color/icon_tint"/>

            <size
                android:width="15dp"
                android:height="15dp"/>

        </shape>

    </item>

</layer-list>